{
  "name": "vue3-typescript-with-compiler-options",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest --no-cache ./src/test.ts"
  },
  "dependencies": {
    "vue": "^3.2.22"
  },
  "devDependencies": {
    "@types/jest": "16.0.10",
    "jest": "^28.0.2",
    "jest-environment-jsdom": "28.0.2",
    "ts-jest": "^28.0.1",
    "typescript": "^4.1.2",
    "@vue/vue3-jest": "^27.0.0-alpha.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.vue$": "@vue/vue3-jest"
    },
    "globals": {
      "vue-jest": {
        "compilerOptions": {
          "propsDestructureTransform": true
        }
      }
    }
  }
}
