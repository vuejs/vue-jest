{
  "name": "vue3-style",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest --no-cache test.js"
  },
  "dependencies": {
    "vue": "^3.2.22"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@vue/test-utils": "^2.0.0-rc.10",
    "@vue/vue3-jest": "^29.0.0",
    "jest": "29.x",
    "jest-environment-jsdom": "29.x",
    "less": "^3.9.0",
    "postcss": "^8.4.31",
    "sass": "^1.23.7",
    "stylus": "^0.54.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "@vue/vue3-jest"
    },
    "moduleNameMapper": {
      "^~?__styles/(.*)$": "<rootDir>/components/styles/$1"
    },
    "globals": {
      "vue-jest": {
        "resources": {
          "scss": [
            "variables.scss"
          ],
          "less": [
            "variables.less"
          ]
        }
      }
    }
  }
}
